{
    "name": "Audio Meld",
    "version": "1.0",
    "description": "Control main and background audio for a seamless listening experience.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
      ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html"
    },
    "manifest_version": 3
  }